#!/usr/bin/env bash

if [ -f $HOME/.inputrc ]; then
    ln -s $HOME/.dots/.inputrc $HOME
fi

export VISUAL=vim
export EDITOR="$VISUAL"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.dots/bin:$PATH"
export CUSTOM_SCRIPTS_HELPER_INDENTATION="   "

bind 'set completion-ignore-case on'

### aliases ###
alias edit-bash-conf='vim $HOME/.bash_custom && source $HOME/.bashrc'
alias edit-alias='vim $HOME/.bash_aliases && source $HOME/.bashrc'
alias edit-ssh='vim $HOME/.ssh/config'
alias edit-bin='f() { org=$(pwd); cd $HOME/.dots/bin; vim .; chmod +x *; source $HOME/.bashrc; cd $org; }; f'
alias dots='cd $HOME/.dots'
alias ..='cd ..'
alias ....='cd .. && cd ..'
