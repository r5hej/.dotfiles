#!/usr/bin/env bash

export VISUAL=vim
export EDITOR="$VISUAL"
export PATH="/home/r5hej/.local/bin:$PATH"
export PATH="/home/r5hej/.dots/bin:$PATH"

bind 'set completion-ignore-case on'

### aliases ###
alias edit-bash-conf='vim $HOME/.bash_custom && source $HOME/.bashrc'
alias edit-ssh='vim ~/.ssh/config'
alias edit-bin='f() { org=$(pwd); cd $HOME/.dots/bin; vim .; source $HOME/.bashrc; cd $org; }; f'
alias ..='cd ..'
alias ....='cd .. && cd ..'
